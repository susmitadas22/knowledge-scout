{
  "name": "knowledge-scout",
  "version": "0.1.0",
  "scripts": {
    "watch": "pnpm run -r watch",
    "build:packages": "pnpm --filter @knowledgescout/schemas build",
    "build": "pnpm run build:packages && pnpm --filter @knowledgescout/api build",
    "pm2:start": "npx pm2 start ecosystem.config.cjs --only knowledgescout-api",
    "pm2:stop": "npx pm2 stop ecosystem.config.cjs --only knowledgescout-api",
    "pm2:restart": "npx pm2 restart ecosystem.config.cjs --only knowledgescout-api",
    "pm2:logs": "npx pm2 logs knowledgescout-api --lines 200"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susmitadas22/knowledge-sout.git"
  },
  "author": "susmitadas9639@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/susmitadas22/knowledge-sout/issues"
  },
  "homepage": "https://github.com/susmitadas22/knowledge-sout#readme"
}